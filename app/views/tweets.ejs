<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
  	<link rel="stylesheet" type="text/css" href="stylesheets/application.css">
  </head>
  <body>
    <header></header>
    <main>
      <form id="tweet-form" action="tweets/create" method="POST">
        <input id="tweet-form-handle" type="text" name="handle" placeholder="KunkkaBlade">
        <textarea id="tweet-form-body" name="body" placeholder="What's going on?"></textarea>
        <button id="tweet-form-button">Tweet</button>
      </form>
      <% tweets.forEach(function(tweet) { %>
        <% include tweet.ejs %>
      <% }); %>
    </main>
  </body>
</html>
